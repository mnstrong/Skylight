<body>
    <div class="container">
        <h1>üóìÔ∏è Google Calendar Auth Test</h1>
        
        <div id="status" class="status disconnected">
            ‚ùå Not connected to Google Calendar
        </div>

        <div class="status info">
            <strong>Instructions:</strong><br>
            1. Click "Connect to Google Calendar"<br>
            2. Sign in with your Google account<br>
            3. You'll be redirected back automatically<br>
            4. Your token will be saved to localStorage
        </div>

        <button onclick="testConnect()">üîó Connect to Google Calendar</button>
        <button onclick="testDisconnect()" class="disconnect">üîå Disconnect</button>
        <button onclick="checkStatus()">üîç Check Status</button>
        <button onclick="clearLog()">üóëÔ∏è Clear Log</button>

        <h3>Token Info:</h3>
        <pre id="tokenInfo">No token found</pre>

        <h3>Console Log:</h3>
        <div id="log" class="log">
            <div class="log-entry">Ready...</div>
        </div>
    </div>

    <script>
        // ===== CONFIG =====
        const GOOGLE_CLIENT_ID = '711113551828-7ttas1jf0nke59msbhii5gpc7us06reu.apps.googleusercontent.com';
        const SCOPES = 'https://www.googleapis.com/auth/calendar.events';
        
        // ===== LOGGING =====
        function log(message, type = 'info') {
            const logDiv = document.getElementById('log');
            const timestamp = new Date().toLocaleTimeString();
            const colors = {
                info: '#4fc3f7',
                success: '#66bb6a',
                error: '#ef5350',
                warning: '#ffa726'
            };
            logDiv.innerHTML += `<div class="log-entry" style="color: ${colors[type]}">[${timestamp}] ${message}</div>`;
            logDiv.scrollTop = logDiv.scrollHeight;
            console.log(message);
        }

        function clearLog() {
            document.getElementById('log').innerHTML = '<div class="log-entry">Log cleared...</div>';
        }

        // ===== OAUTH FUNCTIONS =====
        function getRedirectUri() {
            return window.location.origin + window.location.pathname;
        }

        function checkOAuthRedirect() {
            const hash = window.location.hash;
            
            if (hash && hash.indexOf('access_token=') !== -1) {
                log('‚úÖ OAuth redirect detected!', 'success');
                
                const params = {};
                const hashStr = hash.substring(1);
                const pairs = hashStr.split('&');
                
                for (let i = 0; i < pairs.length; i++) {
                    const pair = pairs[i].split('=');
                    if (pair.length === 2) {
                        params[decodeURIComponent(pair[0])] = decodeURIComponent(pair[1]);
                    }
                }
                
                if (params.access_token) {
                    const expiresIn = parseInt(params.expires_in) || 3600;
                    const expiryTime = Date.now() + (expiresIn * 1000);
                    
                    localStorage.setItem('google_access_token', params.access_token);
                    localStorage.setItem('google_token_expiry', expiryTime.toString());
                    
                    log('‚úÖ Token saved! Expires in ' + expiresIn + ' seconds', 'success');
                    
                    // Clean up the URL
                    window.history.replaceState(null, null, window.location.pathname);
                    
                    checkStatus();
                    return true;
                }
            }
            return false;
        }

        function testConnect() {
            log('üöÄ Starting OAuth flow...', 'info');
            
            const authUrl = 'https://accounts.google.com/o/oauth2/v2/auth' +
                '?client_id=' + encodeURIComponent(GOOGLE_CLIENT_ID) +
                '&redirect_uri=' + encodeURIComponent(getRedirectUri()) +
                '&response_type=token' +
                '&scope=' + encodeURIComponent(SCOPES) +
                '&prompt=consent';
            
            log('üìç Redirect URI: ' + getRedirectUri(), 'info');
            log('üåê Redirecting to Google...', 'info');
            
            window.location.href = authUrl;
        }

        function testDisconnect() {
            const token = localStorage.getItem('google_access_token');
            
            if (token) {
                // Revoke token
                const img = new Image();
                img.src = 'https://oauth2.googleapis.com/revoke?token=' + token;
                log('üîå Token revoked', 'warning');
            }
            
            localStorage.removeItem('google_access_token');
            localStorage.removeItem('google_token_expiry');
            
            log('‚ùå Disconnected', 'warning');
            checkStatus();
        }

        function checkStatus() {
            const token = localStorage.getItem('google_access_token');
            const expiry = localStorage.getItem('google_token_expiry');
            const statusDiv = document.getElementById('status');
            const tokenInfo = document.getElementById('tokenInfo');
            
            if (token && expiry) {
                const expiryTime = parseInt(expiry);
                const now = Date.now();
                const timeLeft = Math.floor((expiryTime - now) / 1000);
                
                if (timeLeft > 0) {
                    statusDiv.className = 'status connected';
                    statusDiv.innerHTML = '‚úÖ Connected to Google Calendar';
                    
                    const minutes = Math.floor(timeLeft / 60);
                    const seconds = timeLeft % 60;
                    
                    tokenInfo.textContent = 
                        'Token: ' + token.substring(0, 20) + '...\n' +
                        'Expires in: ' + minutes + 'm ' + seconds + 's\n' +
                        'Expiry: ' + new Date(expiryTime).toLocaleString();
                    
                    log('‚úÖ Status: Connected (expires in ' + minutes + 'm ' + seconds + 's)', 'success');
                } else {
                    statusDiv.className = 'status disconnected';
                    statusDiv.innerHTML = '‚ö†Ô∏è Token expired';
                    tokenInfo.textContent = 'Token expired at: ' + new Date(expiryTime).toLocaleString();
                    log('‚ö†Ô∏è Token expired', 'warning');
                }
            } else {
                statusDiv.className = 'status disconnected';
                statusDiv.innerHTML = '‚ùå Not connected to Google Calendar';
                tokenInfo.textContent = 'No token found';
                log('‚ùå No token found', 'error');
            }
        }

        // ===== INIT =====
        window.onload = function() {
            log('üéâ Page loaded', 'success');
            log('üìç Current URL: ' + window.location.href, 'info');
            log('üìç Redirect URI: ' + getRedirectUri(), 'info');
            
            // Check if we're returning from OAuth
            if (checkOAuthRedirect()) {
                log('üéØ Returned from OAuth!', 'success');
            }
            
            checkStatus();
        };
    </script>
</body>
